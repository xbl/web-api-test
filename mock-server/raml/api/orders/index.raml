get:
  description: 订单列表
  responses:
    200:
      body:
        type: Order
        example: !include ./orders_200.json
post:
  description: 创建订单
  body:
    application/json:
    type: SimpleOrder
    example: |
      {
        "product_id":1,
        "amount": 10
      }
  responses:
    200:
      body:
        example: |
          {
              "order_id": 1
          }
    500:
      body:
        example: |
          {
              "code": 500,
              "message": "创建订单失败！"
          }
/{id}:
  get:
    description: 订单详情
    (uriParameters):
      id:
        description: order id
        example: 1
    responses:
      200:
        body:
          example: !include ./order_detail_200.json
  delete:
    description: 删除订单
    (uriParameters):
      id:
        description: order id
        example: 1
    responses:
      200:
        body:
          example: |
            {}
